<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gym.TreinoPage"
             Title="TreinoPage">
    <VerticalStackLayout Padding="10">

        <Label Text="{Binding TreinoLetra ,StringFormat='Treino {0}'}" 
               FontSize="24" 
               FontAttributes="Bold" 
               TextColor="White"
               HorizontalOptions="Center" />

        <Label Text="ExercÃ­cios" 
               FontSize="18" 
               FontAttributes="Bold" 
               TextColor="White"
               Margin="0,10,0,5"/>

        <CollectionView ItemsSource="{Binding Exercicios}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="#393d42" Padding="10" CornerRadius="8">
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="{Binding Nome}" TextColor="White" FontSize="16"/>
                            <Label Text="{Binding Series}" TextColor="White"/>
                            <Label Text="{Binding Peso}" TextColor="White"/>
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>