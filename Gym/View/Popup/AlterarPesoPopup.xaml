<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Gym.View.AlterarPesoPopup">

    <VerticalStackLayout Padding="20" Spacing="16" BackgroundColor="#1f1f1f" WidthRequest="300">
        <Label Text="Alterar Peso" 
               FontSize="20" 
               FontAttributes="Bold" 
               HorizontalOptions="Center"/>

        
        <Entry x:Name="PesoEntry"
               Placeholder="Digite o novo peso"
               Keyboard="Text"
               HorizontalOptions="FillAndExpand"/>

        
        <HorizontalStackLayout Spacing="10" HorizontalOptions="FillAndExpand">
            <Button Text="Cancelar" 
                    Clicked="Cancelar_Clicked" 
                    HorizontalOptions="FillAndExpand"/>
            <Button Text="Confirmar" 
                    Clicked="Confirmar_Clicked" 
                    HorizontalOptions="FillAndExpand"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
