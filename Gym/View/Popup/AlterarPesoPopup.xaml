<?xml version="1.0" encoding="utf-8" ?>

<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Gym.View.AlterarPesoPopup">

    <VerticalStackLayout Padding="20" Spacing="16" BackgroundColor="White">
        <Label Text="Alterar Peso" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>

        <Entry x:Name="PesoEntry"
               Placeholder="Digite o novo peso"
               Keyboard="Numeric"/>

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
            <Button Text="Cancelar" Clicked="Cancelar_Clicked" />
            <Button Text="Confirmar" Clicked="Confirmar_Clicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>